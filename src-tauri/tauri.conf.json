{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Claude Code History Viewer",
  "version": "1.0.0-beta.3",
  "identifier": "com.claude.history-viewer",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "windows": [
      {
        "title": "Claude Code History Viewer",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "visible": true,
        "focus": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default", "http-requests"]
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "fs": {
      "requireLiteralLeadingDot": false
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/jhlee0409/claude-code-history-viewer/releases/download/latest/latest.json"
      ],
      "dialog": false,
      "pubkey": "-----BEGIN PUBLIC KEY-----\nMCowBQYDK2VwAyEAN03TI0H0yqbEiUtgH1sTbYv38wH26H7x3qqGU9VFXAo=\n-----END PUBLIC KEY-----"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "createUpdaterArtifacts": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "signingIdentity": null,
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  }
}
